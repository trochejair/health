@model IEnumerable<Web.HealthFoot.Models.DIRECCION>

@{
    /**/

    ViewBag.Title = "Entrega";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}
<section class="mainContent clearfix cartListWrapper">
    <form action="@Url.Action("Finalizar", "Cart")" method="post">
        <div class="row mt-5">
            @Html.AntiForgeryToken()

            <div class="col-11 mx-auto">
                <div class="row">
                    <div class="col-8">
                        <h2>Entrega</h2>
                        <br />

                        <h4>Selecciona alguna de tus direcciones asociadas o agrega una nueva</h4> <br />

                        <div class="row">
                            @foreach (var item in Model)
                            {

                                <div class="col-12">
                                    <div class="card my-2" style="border:solid 1px rgba(128, 128, 128, 0.5)!important; border-radius: 5px;">
                                        <div class="card-body">
                                            <div class="form-check">
                                                <input type="radio" id="radio-@item.ID" name="selection" value="@item.ID">
                                                <label for="radio-@item.ID">
                                                    @Html.DisplayFor(modelItem => item.ESTADO)

                                                    @Html.DisplayFor(modelItem => item.CIUDAD)

                                                    @Html.DisplayFor(modelItem => item.MUNICIPIO)

                                                    @Html.DisplayFor(modelItem => item.COLONIA)

                                                    @Html.DisplayFor(modelItem => item.CALLE)

                                                    @Html.DisplayFor(modelItem => item.CP)

                                                    @Html.DisplayFor(modelItem => item.NUMERO)
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            }
                            <div class="col-12 text-center">
                                <a type="button" href="@Url.Action("Create","Direccion")" class="btn btn btn-primary">Agregar nueva dirección</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="row">
                            <div class="col-12">
                                <div class="card" style="border:solid 1px rgba(128, 128, 128, 0.5)!important; border-radius: 5px;">
                                    <div class="card-body">
                                        <p>Subtotal: @ViewBag.Subtotal </p>
                                        <p>Iva: @ViewBag.Iva</p>

                                        <p>Total: @ViewBag.Total</p>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-12 text-center">
                                <br />
                                <button class="btn btn-primary" type="submit">Finalizar</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>
    </section>