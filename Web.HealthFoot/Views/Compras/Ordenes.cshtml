@model List<Web.HealthFoot.Models.ORDEN_PROVEEDOR>
@{
    ViewBag.Title = "Ordenes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section botones{
    <div class="row">
        <div class="col-md-12">
            @Html.ActionLink("Agregar", "Create", "OrdenesInsumos", new { area = "" }, new { @class = "btn btn-primary" })
        </div>
    </div>
}
<div class="row">
    <div class="col-md-12">
        <h2>Ordenes</h2>
    </div>
    <div class="col-md-12">
        <table class="table datatable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Proveedor</th>
                    <th>Insumo</th>
                    <th>Fecha</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.ID </td>
                        <td>@order.PROVEEDOR.NOMBRE </td>
                        <td>
                            <div class="row">

                                @foreach (var insumo in order.INSUMO_ORDEN)
                                {
                                    <div class="col-md-12">

                                        <b>
                                          </b>
                                        (
                                        @insumo.CANTIDAD
                                        @insumo.UNIDAD_MEDIDA
                                        )

                                    </div>
                                }
                            </div>
                        </td>
                        <td>
                            @Convert.ToDateTime(order.FECHA).ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            <i class="fas fa-eye"></i>
                        </td>
                    </tr>

                }
            </tbody>

        </table>
    </div>
</div>
