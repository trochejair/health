@model Web.HealthFoot.Models.ViewModelsEmpRol.ViewModelEmpleadoEdit

@{
    ViewBag.Title = "Ver Empleado";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section botones{

    <div class="row">

        <div class="col-md-6">

            @Html.ActionLink("Modificar", "Edit", "Empleado", new { id = Model.ID }, new { @class = "btn btn-primary" })

        </div>

        <div class="col-md-6">

            @Html.ActionLink("Regresar", "List", "Empleado", new { @class = "btn btn-danger" })

        </div>

    </div>

}

<div class="col-12 container">

    <h2>Modificar Empleado</h2>

</div>

<div class="col-12">

    <label>Detalle de Usuario</label>

</div>

    <div class="container card border border-dark">

        <div class="col-12 p-4">

            <div class="col-12">

                <div class="form-group row">

                    <label for="example-text-input" class="col-sm-2 col-form-label">

                        Apellido Paterno:

                    </label>

                    <div class="col-sm-10">

                        <label>
                            
                            @Model.APELIDO_PATERNO
                        
                        </label>

                    </div>

                </div>

                <div class="form-group row">

                    <label for="example-text-input" class="col-sm-2 col-form-label">

                        Apellido Materno:

                    </label>

                    <div class="col-sm-10">

                        <label>

                            @Model.APELLIDO_MATERNO

                        </label>

                    </div>

                </div>

                <div class="form-group row">

                    <label for="example-text-input" class="col-sm-2 col-form-label">

                        Email:

                    </label>

                    <div class="col-sm-10">

                        <label>

                            @Model.EMAIL

                        </label>

                    </div>

                </div>

                <div class="form-group row">

                    <label class="col-sm-2 col-form-label">
                        
                        Status
                    
                    </label>

                    <div class="col-sm-10">

                        <div class="custom-control custom-radio custom-control-inline">

                            @if (Model.ACTIVO == 1)
                            {
                                <label>
                                
                                    Activo
                                
                                </label>

                            }
                            else
                            {

                                <label>
                            
                                    Desactivo
                                
                                </label>

                            }

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

    <div class="col-12">

        <label>Información de acceso</label>

    </div>

    <div class="container card border border-dark">

        <div class="col-12 p-4">

            <div class="col-12">

                <div class="form-group ifw">

                    <label class="col-sm-2 col-form-label">

                        Rol

                    </label>

                    <div class="col-sm-10">

                        <label>

                            @Model.ROL

                        </label>

                    </div>

                </div>

            </div>

        </div>

    </div>