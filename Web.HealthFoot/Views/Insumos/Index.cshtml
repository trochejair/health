@model List<Web.HealthFoot.Models.INSUMO>
@{
    ViewBag.Title = "Insumos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section botones{
    <div class="row">
        <div class="col-md-12">
            @Html.ActionLink("Agregar", "Create", "Insumos",
           new { area = "" }, new { @class = "btn btn-primary" })
        </div>
    </div>
}

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    @Scripts.Render("~/Content/Admin/Supplied/index.js")
}

<div class="row">
    <div class="col-md-12">
        <h2>Insumos</h2>
    </div>
    <div class="col-md-12">
        <table class="table datatable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var insumo in Model)
                {
                    <tr>
                        <td>@insumo.ID </td>
                        <td>@insumo.NOMBRE</td>
                        <td>
                            <a data-toggle="tooltip"
                               data-placement="top"
                               title="Desactivar"
                               href="@Url.Action("Delete","Insumos", new { id = insumo.ID })"
                               class="fas fa-trash">
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
