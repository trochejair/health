@model Web.HealthFoot.Models.ViewModelsEmpRol.ViewModelRol

@{
    ViewBag.Title = "Modifica Rol";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section botones{

    <div class="row">

        <div class="col-md-6">

            <label for="submit-form" class="btn btn-primary">Guardar</label>

        </div>
        <div class="col-md-6">

            @Html.ActionLink("Cancelar", "List", "Rol", new { @class = "btn btn-danger" })

        </div>

    </div>

}

<div class="col-12 container">

    <h2>Modifica Rol</h2>

</div>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    @Html.HiddenFor(r => r.Id)

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="text-danger">

        @ViewBag.Mensaje

    </div>

    <div class="container">

        <div class="col-12">

            <div class="form-group row">
                
                <label for="nombre" class="col-sm-2 col-form-label">
                    
                    Nombre
                
                </label>

                <div class="col-sm-10">

                    @Html.TextBoxFor(r => r.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(r => r.Name, "", new { @class = "text-danger" })

                    <!--
                    <input class="form-control form-control-sm" type="text" value="@Model.Name" placeholder="Introduzca un nombre para el rol" id="Name" name="Name">
                    -->

                </div>

            </div>

        </div>

    </div>

    <input type="submit" value="Guardar" id="submit-form" style="visibility:hidden" />

}
